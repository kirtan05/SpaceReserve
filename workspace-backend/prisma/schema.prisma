datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}


type booking {
  id      String   
  bookingTime DateTime @default(now())
  startTime DateTime 
  endTime DateTime
  approvalStatus String
  reason String 
}

model Booking {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  booking booking
}
model User {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  email   String   @unique
  name    String?
  role    String
  bookings booking[]
}
